<h1 class="center"><b>Signup for the WebApp</h1>
<% if @user.errors.any? %>
		<h2>the following errors have been addressed</h2>
		<ul>
			<% @user.errors.full_messages.each do|msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
<%= form_for @user do |f| %>
<p>
   <%= f.label :UserName %><br/>
   <%= f.text_field :username %>
</p>
<p>
   <%= f.label :email %><br/>
   <%= f.email_field :email %>
</p>

<p>
   <%= f.label :password %><br/>
   <%= f.password_field :password %>
</p>
<p>
   <%= f.submit "Signup",class: 'btn btn-primary' %>
</p>
<% end %>

<%= link_to "Back to articles listing", articles_path %>


